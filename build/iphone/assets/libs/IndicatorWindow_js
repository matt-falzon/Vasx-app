function createIndicatorWindow(e){function a(){return style=Ti.UI.iPhone.ActivityIndicatorStyle.PLAIN,"iPhone OS"!==Ti.Platform.name&&(style=Ti.UI.ActivityIndicatorStyle.DARK),style}function t(){s.open(),l.show(),s.setVisible(!0),l.setVisible(!0)}function r(){l.hide(),l.setVisible(!1),s.setVisible(!1),s.close()}var n="50%",i="12%",o="40%",s=Ti.UI.createWindow({height:i,width:n,top:o,borderRadius:10,touchEnabled:!1,backgroundColor:"#000",opacity:.6}),c=Ti.UI.createView({width:Ti.UI.SIZE,height:Ti.UI.FILL,center:{x:n/2,y:i/2},layout:"horizontal"}),l=Ti.UI.createActivityIndicator({style:a(),left:"7%",height:Ti.UI.FILL,width:30}),h=Ti.UI.createLabel({left:"15%",width:Ti.UI.FILL,height:Ti.UI.FILL,text:"Loading...",color:"#fff",font:{fontFamily:"Helvetica Neue",fontSize:16,fontWeight:"bold"}});return c.add(l),c.add(h),s.add(c),s.openIndicator=t,s.closeIndicator=r,s}exports.createIndicatorWindow=createIndicatorWindow;