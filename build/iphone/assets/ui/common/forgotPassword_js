function forgotPassword(){var e=Ti.UI.create2DMatrix();e=e.scale(0);var t=Ti.UI.createWindow({backgroundColor:"#336699",borderWidth:8,borderColor:"#999",height:"25%",width:"65%",top:"15%",borderRadius:10,opacity:.92,transform:e}),a=Ti.UI.create2DMatrix();a=a.scale(1.1);var r=Ti.UI.createAnimation();r.transform=a,r.duration=200,r.addEventListener("complete",function(){Ti.API.info("here in complete");var e=Ti.UI.create2DMatrix();e=e.scale(1),t.animate({transform:e,duration:200})});var i=Ti.UI.createButton({title:"Done",height:"20%",width:"60%",bottom:"12%"});t.add(i),i.addEventListener("click",function(){resetPassword(msisdnTextField.getValue(),"en",1);var e=Ti.UI.create2DMatrix();e=e.scale(0),t.close({transform:e,duration:300})}),t.add(msisdnView),msisdnView.add(msisdnTextField),t.add(forgotLabel),t.open(r)}function resetPassword(e,t,a){var r=Ti.Network.createHTTPClient();r.onerror=function(){Ti.API.error(this.status+" - "+this.statusText)};var i=[{MSISDN:e,LanguageCode:t,VirtualNetwork:a}],n=generateXML("http://service.adminportal.vasx.com/","resetPassword",i);r.open("POST","http://192.168.20.3:12080/vx_adminportal/AdminPortal"),r.setRequestHeader("Content-Type","text/xml"),r.setRequestHeader("Content-Length",n.length),r.setRequestHeader("SOAPAction",'"resetPassword"'),r.send(n),r.onload=function(){var e=r.responseXML.documentElement.getElementsByTagName("resetPasswordResponse");if(Ti.API.info(e.item(0).text),e&&e.length>0){var t=Ti.XML.parseString(e.item(0).text),a=t.getElementsByTagName("Message");alert(a.item(0).text)}}}var forgotLabel=Ti.UI.createLabel({text:"Forgot your password",top:"8%",font:{fontSize:"12sp",fontWeight:"bold"},color:"white"}),msisdnView=Ti.UI.createView({layout:"vertical",backgroundColor:"#E3E8E8",top:"28%",height:"30%",left:"8%",right:"8%",borderRadius:10}),msisdnTextField=Ti.UI.createTextField({top:"25%",left:"3%",right:"3%",bottom:"18%",font:{fontSize:"12sp",fontWeight:"bold"},hintText:"Enter your phone number",textAlign:Ti.UI.TEXT_ALIGNMENT_CENTER});msisdnTextField.keyboardType=Ti.UI.KEYBOARD_PHONE_PAD,exports.forgotPassword=forgotPassword;